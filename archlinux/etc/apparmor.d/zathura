#include <tunables/global>

profile zathura /usr/bin/zathura {
  #include <abstractions/base>
  #include <abstractions/fonts>

  /usr/bin/zathura mr,

  # system files
  /usr/share/file/misc/magic.mgc r,
  /usr/share/gtk-3.0/settings.ini r,
  /usr/share/icons/ r,
  /usr/share/icons/** r,
  /usr/share/mime/** r,
  /usr/share/fonts/** r,
  /usr/share/pixmaps/ r,
  /usr/share/pixmaps/** r,
  /usr/share/locale/ r,
  /usr/share/locale/** r,

  # Home folder
  owner @{HOME}/ r,
  owner @{HOME}/** r,

  owner @{HOME}/@{XDG_DATA_DIR}/zathura/* rwk,
}
